
<div class="contact">
  <div class="header">
    <h1 class="page-title">Contact Callan</h1>
  </div>
  <!-- end header --> 
  <div class="row">
	  <div class="contact-form col-md-6">
		  <%= flash[:notice] %>

			<%= form_tag("/static_pages/thank_you") do %>
			
			<div class="form-group">
			      <%= label_tag :name %>
			      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
			    </div>
			    <!-- end form-group  -->     
			    <div class="form-group">
			      <%= label_tag :email %>
			      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
			    </div>
			    <!-- end form-group  --> 
			    <div class="form-group">
			      <%= label_tag :message %>
			      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
			    </div>
			    <!-- end form-group  -->    
			
			<%= submit_tag "Send" %>   
			<% end %>
		</div>
		<!-- end contact-form col-md-4-->
	  <div class="info col-md-6">
		  <div class="email">
		    <p><span class="glyphicon glyphicon-envelope"></span>callan.c.cook@gmail.com</p>
		  </div>
		  <!-- end email -->
		  <div class="address">
		    <p><span class="glyphicon glyphicon-home"></span>Sharpsburg, GA</p>
		  </div>
		  <!-- end address -->
		  <div class="phone">
		    <p><span class="glyphicon glyphicon-phone"></span>770.241.8120</p>
		  </div>
		  <!-- end phone -->
	  </div>
	  <!-- end info col-md-4-->
	</div> <!-- end row -->
</div>
<!-- end contact -->


