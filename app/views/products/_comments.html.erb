<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div class="row" id="previous-comments">
            <hr>
            <p><strong><%= comment.user.first_name %></strong> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            
            <p><%= comment.body %></p>
            <div class="rated" data-score="<%= comment.rating %>"></div>
        </div>
    <% end %>
</div>