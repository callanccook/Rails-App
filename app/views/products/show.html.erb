<% if notice %>
  <p class="alert alert-info" role="alert"><%= notice %></p>
<% end%>

<div class="container">
  <h3 id="product-name"><strong><%= @product.name %></strong></h3>
  <div class="row" id="product-show">
    <div class="col-md-4">
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
      <p>
        <strong>Color:</strong>
        <%= @product.color %>
      </p>
      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>
      <% if @product.comments.exists? %>
        <p>
          <strong>Average Rating:</strong>
          <%= @product.average_rating %>
        </p>
        <p>
          <strong>Review:</strong>
          <%= @product.highest_rating_comment.body %>
        </p>
      <% else %>
        <p>This product has not yet been rated.</p>
      <% end %>
    </div><!-- end col-md-4 -->

    <div class="col-md-8">
       <%= image_tag(@product.image_url, class:'img-responsive img-rounded') %>
    </div><!-- end col-md-8 -->
  </div><!-- end row -->
  <div class="row">
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </div>
   

</div><!-- end container -->
