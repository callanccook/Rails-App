<h1>Products</h1>
<!-- begin bootstrap grid -->
<div class="container">
  <div class="row">
  	<% cache(cache_key_for_products) do %>
	    <% @products.each do |product| %>
	      <%= render product %>
	    <% end %>
	    <!-- another option is < %= render partial: "product", collection: @products %> OR < %= render @products %> -->
    <% end %>
  </div>
  <!-- end row -->
</div>
<!-- end container -->

<%= link_to 'New Product', new_product_path %>